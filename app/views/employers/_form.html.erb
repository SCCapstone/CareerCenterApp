<%= form_for(@employer, multipart: true) do |f| %>
  <% if @employer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employer.errors.count, "error") %> prohibited this employer from being saved:</h2>

      <ul>
      <% @employer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.label :website %><br>
    <%= f.text_area :website %>
  </div>
  <div class="control-group">
    <% unless @employer.logo.blank? %>
    <%= image_tag "/uploads/company_logos/#{@employer.logo}" %>
    <% end %>
    <br/>
    <p>Choose a new file to add logo or replace current.</p>
    <%= f.label :logo %><br>
    <%= f.file_field :logo %>
  </div>
  <div class="control-group">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>
  <div class="control-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="control-group">
    <%= f.label :majors %><br>
    <%= f.text_area :majors %>
  </div>
  <div class="control-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="control-group">
    <%= f.label :positions %><br>
    <%= f.text_area :positions %>
  </div>
  <div class="control-group">
    <%= f.label :tips %><br>
    <%= f.text_area :tips %>
  </div>
  <div class="control-group">
    <%= f.label :table_s, "Table Number(s)" %><br>
    <%= f.number_field :table_s %>
  </div>
  <div class="control-group">
    <%= f.label :conference_id %><br>
    <%= f.collection_select :conference_id, Conference.order(:name),:id,:name, include_blank: true, :prompt => "Pick Conference" %>
  </div>
  <%= f.hidden_field :last_edit, :value => current_user.name %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
